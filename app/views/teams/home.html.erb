
<div class="title clearfix">
      <div class="title_left">
         <h2>TEAM BOARD</h2>
         <p>チーム交流板</p>
      </div>
      <div class="title_right">
         <div class="name_box2">
         <%= link_to 'チーム編集', edit_team_path(@team), class: 'btn-square' %>
         </div>
      </div>
</div>

<div class="team_box">
   <div class="container">
       <div class="row">
           <div class="col-xs-3">
               <div class="image_team">
                  <%= attachment_image_tag @team, :team_image, :fill, 100, 100, fallback: "no_image.jpg", class: 'img-responsive' %>
               </div>
            </div>
            <div class="col-xs-9">
                <table class="team_table">
                    <tr>
                        <th class="team_show_th"><h4>Team Name<font size="1"> <チーム名></font></h4></th>
                        <td class="team_show_td"><%= @team.team_name %></td>
                    </tr>
                    <tr>
                        <th class="team_show_th"><h4>Team Tag<font size="1"> <チームタグ></font></h4></th>
                        <td class="team_show_td2"><% @tags.each do |tag| %><h5 class="tag_box"><%= tag.tag_name %></h5><% end %></td>
                    </tr>
                    <tr>
                        <th class="team_show_th"><h4>Introduction<font size="1"> <チーム紹介></font></h4></th>
                        <td class="team_show_td"><%= @team.team_body %></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="team_box">
    <h3>MEMBER<font size="2">  メンバー</font></h3>
     <div class="user_list">
            <% @user_teams.each do |u| %>
            <div class="user_list_container">
                <%= attachment_image_tag u.user, :user_image, :fill, 100, 100, fallback: "no_image.jpg" ,size: '80x80',style: 'border-radius: 50%;' %>
                <div class="text-center">
                <%= link_to user_path(u.user.id) do %>
                <%= u.user.hundle_name %>
                </div>
                <% end %>
            </div>
            <% end %>
    </div>

<div class="container">
    <div class="row">
    	<div class="col-xs-9">
            <div class="article_container">
            <h3 class="border_b">Article<font size="2">  記事</font></h3>
            <table class="table article_table">
                <thead>
                <tr>
                    <th width="21%">投稿日時</th>
                    <th width="15%">ユーザー名</th>
                    <th width="50%">件名</th>
                    <th width="7%">&nbsp;</th>
                    <th width="7%">&nbsp;</th>
                </tr>
                </thead>
                <% @team.articles.each do |t| %>
                <tbody>
                <tr>
                    <td><%= t.created_at.strftime("%Y-%m-%d %H:%M") %></td>
                    <td><%= t.user.hundle_name %></td>
                    <td><%= t.article_title %></td>
                    <td>
                        <%= link_to '詳細', team_article_path(t) %>
                    </td>
                    <td>
                        <%= link_to '削除', team_article_path(t), method: :delete, "data-confirm" => "削除しますか？" %>
                    </td>
                </tr>
                </tbody>
                <% end %>
            </table>
        </div>
        </div>
        <div class="col-xs-3">
            <h3 class="border_b">CHAT<font size="2">  チャット</font></h3>
            <p>Coming Soon..</p>
		</div>
            <%#= paginate @contacts %>
    </div>
</div>
</div>




