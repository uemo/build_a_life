
<div class="title">
  <h2>AFFILIATION TEAM</h2>
  <p>所属チーム</p>
</div>

<div class="team_box clearfix">
        <% @user_team.each do |user_team| %>
              <div class="team_container">
                  <%= link_to home_path(user_team.team.id) do %>
                  <div class="team_container_image">
                  <%= attachment_image_tag user_team.team, :team_image, :fill, 230, 230, fallback: "/images/no_image.jpg" %><br>
                  </div>
                  <% end %>
                  <div class="text-center">
                  <b><%= user_team.team.team_name %></b>
                  </div>
                  <% @tags.each do |t| %>
                  <% if t.team_id == user_team.team.id %>
                  <h5 class="tag_box_index"><%= t.tag_name %></h5>
                  <% end %>
                  <% end %>
              </div>
        <% end %>
</div>


<div class="title clearfix">
  <div class="title_left">
        <h2>TEAMS INFORMATION</h2>
        <p>チーム一覧</p>
    </div>
    <div class="title_right">
      <div class="name_box2">
      <%= link_to 'チーム新規作成', new_team_path(@user), class: 'btn-square' %>
        </div>
    </div>
</div>

<div class="team_box1 clearfix">
        <% @teams.each do |team| %>
              <div class="team_container">
                  <%= link_to team_path(team.id) do %>
                  <div class="team_container_image">
                  <%= attachment_image_tag team, :team_image, :fill, 230, 230, fallback: "/images/no_image.jpg" %><br>
                  </div>
                  <% end %>
                  <div class="text-center">
                  <b><%= team.team_name %></b>
                  </div>
                  <% @tags.each do |t| %>
                  <% if t.team_id == team.id %>
                  <h5 class="tag_box_index"><%= t.tag_name %></h5>
                  <% end %>
                  <% end %>
              </div>
        <% end %>

</div>
