<div class="container teams">
	<div class="row">
		<%= render "devise/shared/error_messages", resource: @team %>
		<div class="edit_team_box col-xs-6"><%# offsetで両端除去 %>
			<h2 class="text-center">チーム情報編集</h2>
			<%= form_for(@team) do |f| %>
			<h4><チーム名></h4>
				<%= f.text_field :team_name, autofocus: true, style: "width:100%" %>
			<h4><チーム紹介></h4>
				<%= f.text_area :team_body, autofocus: true, style: "width:100%" %>
			<div class="field">
    　　　　　　<label>画像</label><br />
    　　　　　　<%= f.attachment_field :team_image %>
  　　　　　</div>

			<h4><タグ></h4>
			<div class="tags">
            <%= f.fields_for :tags do |tag| %>
            <%= render 'tag_fields', f: tag, class: 'form-control' %>
            <% end %>
             <div class="links">
              <%= link_to_add_association '＋タグを追加', f, :tags, class: "btn btn-link" %>
            </div>
            </div>
			<br>
			<div class="row">
				<div class="col-xs-4">
					<%= f.submit "更新する" %>
				</div>
			</div>
			<% end %>

        </div>
		    <div class="col-xs-6">
			    <table class="table table-hover">
			        <thead>
			            <tr class="info">
			                <th>タグ</th>
			                <th></th>
			            </tr>
			        </thead>
			        <tbody>
			            <% @tag.each do |tag| %>
			              <tr class="active">
			                  <td> <%= tag.tag_name %></td>
			                  <td> <%= link_to '削除', team_tag_path(tag.team_id), method: :delete %></td>
			              </tr>
			            <% end %>
			        </tbody>
			    </table>
	    </div>
	</div>
</div>