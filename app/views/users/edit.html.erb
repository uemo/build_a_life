<div class="container users">
	<div class="row">
		<%= render "devise/shared/error_messages", resource: @user %>
		<div class="col-xs-4 col-xs-offset-4"><%# offsetで両端除去 %>
			<h2 class="text-center">ユーザー情報編集</h2>
			<%= form_for(@user) do |f| %>
			<h4><名前></h4>
				<%= f.text_field :name, autofocus: true, style: "width:100%" %>
			<h4><名前(フリガナ)></h4>
				<%= f.text_field :ruby_name, autofocus: true, style: "width:100%" %>
			<h4><ハンドルネーム></h4>
				<%= f.text_field :hundle_name, autofocus: true, style: "width:100%" %>
			<div class="field">
    　　　　　　<label>画像</label><br />
    　　　　　　<%= f.attachment_field :user_image %>
  　　　　　</div>
			<h4><電話番号(ハイフンなし)></h4>
				<%= f.text_field :phone, autofocus: true, style: "width:100%" %>
			<h4><メールアドレス></h4>
				<%= f.text_field :email, autofocus: true, style: "width:100%" %>
		    <h4><誕生日></h4>
				<%= f.text_field :birthday, autofocus: true, style: "width:100%" %>
            <h4><居住地></h4>
				<%= f.text_field :address, autofocus: true, style: "width:100%" %>
			<h4><自己紹介></h4>
				<%= f.text_area :introduction, autofocus: true, style: "width:100%" %>
			<h4><目標></h4>
				<%= f.text_area :goal, autofocus: true, style: "width:100%" %>
			<%#
			<h4><パスワード></h4>
				<%= f.password_field :password, class: "col-xs-" %>
			<br>
			<div class="row">
				<div class="col-xs-4">
					<%= f.submit "更新する" %>
				</div>
			</div>
			<% end %>
		</div>
		<br>
		<br>
	</div>
</div>